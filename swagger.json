                    }
                }
            }
        },

        "/token/set-password": {
            "post": {
                "tags": [
                    "Token"
                ],
                "summary": "Reset-password",
                "description": "Update the password",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "token": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "cpassword": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Password update successfully!!"
                    },
                    "401": {
                        "description": "Password does not matched!!"
                    },
                    "403": {
                        "description": "Token has been expired!!"
                    },
                    "405": {
                        "description": "password length must be 6 charcter!!"
                    }
                }
            }
        },

        "/user/create": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "SignUp",
                "description": "Register new the User",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "firstName": {
                                        "type": "string"
                                    },
                                    "lastName": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "avatar": {
                                        "type": "string"
                                    },
                                    "isSuperadmin": {
                                        "type": "boolean",
                                        "default": false
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User Registered Successfully!!"
                    },
                    "400": {
                        "description": "User Already Exist!!"
                    },
                    "401": {
                        "description": "Missing Required fields in the request body!!"
                    },
                    "403": {
                        "description": "password length must be 6 charcter!!"
                    }
                }
            }
        },

        "/user/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Login",
                "description": "User login to get token",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
