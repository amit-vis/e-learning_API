        "/token/create/{id}": {
            "post": {
                "tags": [
                    "Token"
                ],
                "summary": "Create Token",
                "description": "Create token to update the password!!",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
